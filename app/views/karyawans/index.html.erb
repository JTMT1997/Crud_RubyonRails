<p id="notice"><%= notice %></p>

<h1>Karyawan</h1>
<%= link_to 'Tambah Karyawan', new_karyawan_path %>
<table class="responsive-table red lighten-4">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Pendidikan</th>
            <th>Posisi</th>
            <th colspan="3">Aksi</th>
        </tr>
    </thead>

    <tbody>
        <% @karyawans.each do |karyawan| %>
        <tr>
            <td><%= karyawan.nama %></td>
            <td><%= karyawan.pendidikan.pendidikan_terakhir %></td>
            <td><%= karyawan.posisi.posisi %></td>
            <td><%= link_to 'Show', karyawan %></td>
            <td><%= link_to 'Edit', edit_karyawan_path(karyawan) %></td>
            <td><%= link_to 'Destroy', karyawan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>